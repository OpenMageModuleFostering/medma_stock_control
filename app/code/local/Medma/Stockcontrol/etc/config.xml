<?xml version="1.0"?>
<config>
    <modules>
	    <Medma_Stockcontrol>
            <version>0.1.0</version>
    </Medma_Stockcontrol>
    </modules>
    <admin>
        <routers>
			<stockcontrol>
				<use>admin</use>
				<args>
					<module>Medma_Stockcontrol</module>
					<frontName>stockcontrol</frontName>
				</args>
			</stockcontrol>
        </routers>
    </admin>
    
    <adminhtml>
		<menu>
		    	<catalog>
				<children>
					<stockcontrol translate="title" module="stockcontrol">
						<title>Stock Control</title>
						<sort_order>5</sort_order>
						<action>stockcontrol/adminhtml_stockcontrol</action>
					</stockcontrol>
				</children>
			</catalog>
		</menu>
		
        <acl>
            <resources>
                <admin>
                    <children>
			    	<catalog>
					<children>
						<stockcontrol translate="title">
							<title>Stock Control</title>
						<sort_order>1600</sort_order>
						</stockcontrol>
					</children>
				</catalog>
                    </children>
                </admin>
            </resources>
        </acl> 
    </adminhtml>  
    
    <global>
	    <models>
		    <stockcontrol>
			    <class>Medma_Stockcontrol_Model</class>
			    <resourceModel>stockcontrol_mysql4</resourceModel>
		    </stockcontrol>
		   
		    <stockcontrol_mysql4>
			    <class>Medma_Stockcontrol_Model_Mysql4</class>
			    <entities>
				    <stockcontrol>
					    <table>stockcontrol</table>
				    </stockcontrol>
			    </entities>
		    </stockcontrol_mysql4>
		    
        	</models>
        <resources>
		<stockcontrol_write>
               	 	<connection>
                    		<use>core_write</use>
                	</connection>
		</stockcontrol_write>
		<stockcontrol_read>
                	<connection>
                    		<use>core_read</use>
                	</connection>
		</stockcontrol_read>
        </resources>
        <blocks>
		<stockcontrol>
                	<class>Medma_Stockcontrol_Block</class>
		</stockcontrol>
        </blocks>
        <helpers>
		<stockcontrol>
			<class>Medma_Stockcontrol_Helper</class>
		</stockcontrol>
        </helpers>
    </global>

</config>
